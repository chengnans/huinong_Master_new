<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.system.mapper.DataSourceManageMapper">
    
    <resultMap type="DataSourceManage" id="DataSourceManageResult">
        <result property="id"    column="id"    />
        <result property="bid"    column="bid"    />
        <result property="dataSourceName"    column="data_source_name"    />
        <result property="platformName"    column="platform_name"    />
        <result property="appName"    column="app_name"    />
        <result property="dueDate"    column="due_date"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectDataSourceManageVo">
        select id, bid, data_source_name, platform_name, app_name, due_date, status, create_time from data_source_manage
    </sql>

    <select id="selectDataSourceManageList" parameterType="DataSourceManage" resultMap="DataSourceManageResult">
        <include refid="selectDataSourceManageVo"/>
        <where>  
            <if test="bid != null  and bid != ''"> and bid = #{bid}</if>
            <if test="dataSourceName != null  and dataSourceName != ''"> and data_source_name like concat('%', #{dataSourceName}, '%')</if>
            <if test="platformName != null  and platformName != ''"> and platform_name like concat('%', #{platformName}, '%')</if>
            <if test="appName != null  and appName != ''"> and app_name like concat('%', #{appName}, '%')</if>
            <if test="dueDate != null "> and due_date = #{dueDate}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
        </where>
    </select>
    
    <select id="selectDataSourceManageById" parameterType="Long" resultMap="DataSourceManageResult">
        <include refid="selectDataSourceManageVo"/>
        where id = #{id}
    </select>

    <insert id="insertDataSourceManage" parameterType="DataSourceManage" useGeneratedKeys="true" keyProperty="id">
        insert into data_source_manage
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bid != null">bid,</if>
            <if test="dataSourceName != null">data_source_name,</if>
            <if test="platformName != null">platform_name,</if>
            <if test="appName != null">app_name,</if>
            <if test="dueDate != null">due_date,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bid != null">#{bid},</if>
            <if test="dataSourceName != null">#{dataSourceName},</if>
            <if test="platformName != null">#{platformName},</if>
            <if test="appName != null">#{appName},</if>
            <if test="dueDate != null">#{dueDate},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateDataSourceManage" parameterType="DataSourceManage">
        update data_source_manage
        <trim prefix="SET" suffixOverrides=",">
            <if test="bid != null">bid = #{bid},</if>
            <if test="dataSourceName != null">data_source_name = #{dataSourceName},</if>
            <if test="platformName != null">platform_name = #{platformName},</if>
            <if test="appName != null">app_name = #{appName},</if>
            <if test="dueDate != null">due_date = #{dueDate},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteDataSourceManageById" parameterType="Long">
        delete from data_source_manage where id = #{id}
    </delete>

    <delete id="deleteDataSourceManageByIds" parameterType="String">
        delete from data_source_manage where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>