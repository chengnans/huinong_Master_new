<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.system.mapper.LargeScreenSetMapper">
    
    <resultMap type="LargeScreenSet" id="LargeScreenSetResult">
        <result property="id"    column="id"    />
        <result property="bigScreenId"    column="big_screen_id"    />
        <result property="bigScreenClassify"    column="big_screen_classify"    />
        <result property="bigScreenName"    column="big_screen_name"    />
        <result property="title"    column="title"    />
        <result property="displayLevel"    column="display_level"    />
        <result property="areaLevel"    column="area_level"    />
        <result property="organization"    column="organization"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectLargeScreenSetVo">
        select id, big_screen_id, big_screen_classify, big_screen_name, title, display_level, area_level, organization, status, create_time from large_screen_set
    </sql>

    <select id="selectLargeScreenSetList" parameterType="LargeScreenSet" resultMap="LargeScreenSetResult">
        <include refid="selectLargeScreenSetVo"/>
        <where>  
            <if test="bigScreenId != null  and bigScreenId != ''"> and big_screen_id = #{bigScreenId}</if>
            <if test="bigScreenClassify != null  and bigScreenClassify != ''"> and big_screen_classify = #{bigScreenClassify}</if>
            <if test="bigScreenName != null  and bigScreenName != ''"> and big_screen_name like concat('%', #{bigScreenName}, '%')</if>
            <if test="title != null  and title != ''"> and title = #{title}</if>
            <if test="displayLevel != null  and displayLevel != ''"> and display_level = #{displayLevel}</if>
            <if test="areaLevel != null  and areaLevel != ''"> and area_level = #{areaLevel}</if>
            <if test="organization != null  and organization != ''"> and organization = #{organization}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
        </where>
    </select>
    
    <select id="selectLargeScreenSetById" parameterType="Long" resultMap="LargeScreenSetResult">
        <include refid="selectLargeScreenSetVo"/>
        where id = #{id}
    </select>

    <insert id="insertLargeScreenSet" parameterType="LargeScreenSet" useGeneratedKeys="true" keyProperty="id">
        insert into large_screen_set
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="bigScreenId != null">big_screen_id,</if>
            <if test="bigScreenClassify != null">big_screen_classify,</if>
            <if test="bigScreenName != null">big_screen_name,</if>
            <if test="title != null">title,</if>
            <if test="displayLevel != null">display_level,</if>
            <if test="areaLevel != null">area_level,</if>
            <if test="organization != null">organization,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="bigScreenId != null">#{bigScreenId},</if>
            <if test="bigScreenClassify != null">#{bigScreenClassify},</if>
            <if test="bigScreenName != null">#{bigScreenName},</if>
            <if test="title != null">#{title},</if>
            <if test="displayLevel != null">#{displayLevel},</if>
            <if test="areaLevel != null">#{areaLevel},</if>
            <if test="organization != null">#{organization},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateLargeScreenSet" parameterType="LargeScreenSet">
        update large_screen_set
        <trim prefix="SET" suffixOverrides=",">
            <if test="bigScreenId != null">big_screen_id = #{bigScreenId},</if>
            <if test="bigScreenClassify != null">big_screen_classify = #{bigScreenClassify},</if>
            <if test="bigScreenName != null">big_screen_name = #{bigScreenName},</if>
            <if test="title != null">title = #{title},</if>
            <if test="displayLevel != null">display_level = #{displayLevel},</if>
            <if test="areaLevel != null">area_level = #{areaLevel},</if>
            <if test="organization != null">organization = #{organization},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLargeScreenSetById" parameterType="Long">
        delete from large_screen_set where id = #{id}
    </delete>

    <delete id="deleteLargeScreenSetByIds" parameterType="String">
        delete from large_screen_set where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>