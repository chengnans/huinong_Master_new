<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.system.mapper.GrowCycleMapper">
    
    <resultMap type="GrowCycle" id="GrowCycleResult">
        <result property="id"    column="id"    />
        <result property="cropName"    column="crop_name"    />
        <result property="cycleNum"    column="cycle_num"    />
        <result property="cycleName"    column="cycle_name"    />
        <result property="cycleTime"    column="cycle_time"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectGrowCycleVo">
        select id, crop_name, cycle_num, cycle_name, cycle_time, create_time from grow_cycle
    </sql>

    <select id="selectGrowCycleList" parameterType="GrowCycle" resultMap="GrowCycleResult">
        <include refid="selectGrowCycleVo"/>
        <where>  
            <if test="cropName != null  and cropName != ''"> and crop_name like concat('%', #{cropName}, '%')</if>
            <if test="cycleNum != null  and cycleNum != ''"> and cycle_num = #{cycleNum}</if>
            <if test="cycleName != null  and cycleName != ''"> and cycle_name like concat('%', #{cycleName}, '%')</if>
            <if test="cycleTime != null  and cycleTime != ''"> and cycle_time = #{cycleTime}</if>
        </where>
    </select>
    
    <select id="selectGrowCycleById" parameterType="Long" resultMap="GrowCycleResult">
        <include refid="selectGrowCycleVo"/>
        where id = #{id}
    </select>

    <insert id="insertGrowCycle" parameterType="GrowCycle" useGeneratedKeys="true" keyProperty="id">
        insert into grow_cycle
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="cropName != null">crop_name,</if>
            <if test="cycleNum != null">cycle_num,</if>
            <if test="cycleName != null">cycle_name,</if>
            <if test="cycleTime != null">cycle_time,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="cropName != null">#{cropName},</if>
            <if test="cycleNum != null">#{cycleNum},</if>
            <if test="cycleName != null">#{cycleName},</if>
            <if test="cycleTime != null">#{cycleTime},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateGrowCycle" parameterType="GrowCycle">
        update grow_cycle
        <trim prefix="SET" suffixOverrides=",">
            <if test="cropName != null">crop_name = #{cropName},</if>
            <if test="cycleNum != null">cycle_num = #{cycleNum},</if>
            <if test="cycleName != null">cycle_name = #{cycleName},</if>
            <if test="cycleTime != null">cycle_time = #{cycleTime},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteGrowCycleById" parameterType="Long">
        delete from grow_cycle where id = #{id}
    </delete>

    <delete id="deleteGrowCycleByIds" parameterType="String">
        delete from grow_cycle where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>