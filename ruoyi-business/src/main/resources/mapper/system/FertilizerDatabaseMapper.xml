<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.system.mapper.FertilizerDatabaseMapper">
    
    <resultMap type="FertilizerDatabase" id="FertilizerDatabaseResult">
        <result property="id"    column="id"    />
        <result property="fertilizerName"    column="fertilizer_name"    />
        <result property="fertilizerType"    column="fertilizer_type"    />
        <result property="nitrogen"    column="nitrogen"    />
        <result property="phosphorus"    column="phosphorus"    />
        <result property="potassium"    column="potassium"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectFertilizerDatabaseVo">
        select id, fertilizer_name, fertilizer_type, nitrogen, phosphorus, potassium, status, create_time from fertilizer_database
    </sql>

    <select id="selectFertilizerDatabaseList" parameterType="FertilizerDatabase" resultMap="FertilizerDatabaseResult">
        <include refid="selectFertilizerDatabaseVo"/>
        <where>  
            <if test="fertilizerName != null  and fertilizerName != ''"> and fertilizer_name like concat('%', #{fertilizerName}, '%')</if>
            <if test="fertilizerType != null  and fertilizerType != ''"> and fertilizer_type = #{fertilizerType}</if>
            <if test="nitrogen != null "> and nitrogen = #{nitrogen}</if>
            <if test="phosphorus != null "> and phosphorus = #{phosphorus}</if>
            <if test="potassium != null "> and potassium = #{potassium}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectFertilizerDatabaseById" parameterType="Long" resultMap="FertilizerDatabaseResult">
        <include refid="selectFertilizerDatabaseVo"/>
        where id = #{id}
    </select>

    <insert id="insertFertilizerDatabase" parameterType="FertilizerDatabase" useGeneratedKeys="true" keyProperty="id">
        insert into fertilizer_database
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="fertilizerName != null">fertilizer_name,</if>
            <if test="fertilizerType != null">fertilizer_type,</if>
            <if test="nitrogen != null">nitrogen,</if>
            <if test="phosphorus != null">phosphorus,</if>
            <if test="potassium != null">potassium,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="fertilizerName != null">#{fertilizerName},</if>
            <if test="fertilizerType != null">#{fertilizerType},</if>
            <if test="nitrogen != null">#{nitrogen},</if>
            <if test="phosphorus != null">#{phosphorus},</if>
            <if test="potassium != null">#{potassium},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateFertilizerDatabase" parameterType="FertilizerDatabase">
        update fertilizer_database
        <trim prefix="SET" suffixOverrides=",">
            <if test="fertilizerName != null">fertilizer_name = #{fertilizerName},</if>
            <if test="fertilizerType != null">fertilizer_type = #{fertilizerType},</if>
            <if test="nitrogen != null">nitrogen = #{nitrogen},</if>
            <if test="phosphorus != null">phosphorus = #{phosphorus},</if>
            <if test="potassium != null">potassium = #{potassium},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFertilizerDatabaseById" parameterType="Long">
        delete from fertilizer_database where id = #{id}
    </delete>

    <delete id="deleteFertilizerDatabaseByIds" parameterType="String">
        delete from fertilizer_database where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>