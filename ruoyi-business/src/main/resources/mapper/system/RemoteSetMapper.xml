<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.cheng.system.mapper.RemoteSetMapper">
    
    <resultMap type="RemoteSet" id="RemoteSetResult">
        <result property="id"    column="id"    />
        <result property="apartmentId"    column="apartment_id"    />
        <result property="apartmentName"    column="apartment_name"    />
        <result property="openService"    column="open_service"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectRemoteSetVo">
        select id, apartment_id, apartment_name, open_service, create_time from remote_set
    </sql>

    <select id="selectRemoteSetList" parameterType="RemoteSet" resultMap="RemoteSetResult">
        <include refid="selectRemoteSetVo"/>
        <where>  
            <if test="apartmentId != null  and apartmentId != ''"> and apartment_id = #{apartmentId}</if>
            <if test="apartmentName != null  and apartmentName != ''"> and apartment_name like concat('%', #{apartmentName}, '%')</if>
            <if test="openService != null  and openService != ''"> and open_service = #{openService}</if>
        </where>
    </select>
    
    <select id="selectRemoteSetById" parameterType="Long" resultMap="RemoteSetResult">
        <include refid="selectRemoteSetVo"/>
        where id = #{id}
    </select>

    <insert id="insertRemoteSet" parameterType="RemoteSet" useGeneratedKeys="true" keyProperty="id">
        insert into remote_set
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="apartmentId != null">apartment_id,</if>
            <if test="apartmentName != null">apartment_name,</if>
            <if test="openService != null">open_service,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="apartmentId != null">#{apartmentId},</if>
            <if test="apartmentName != null">#{apartmentName},</if>
            <if test="openService != null">#{openService},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateRemoteSet" parameterType="RemoteSet">
        update remote_set
        <trim prefix="SET" suffixOverrides=",">
            <if test="apartmentId != null">apartment_id = #{apartmentId},</if>
            <if test="apartmentName != null">apartment_name = #{apartmentName},</if>
            <if test="openService != null">open_service = #{openService},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRemoteSetById" parameterType="Long">
        delete from remote_set where id = #{id}
    </delete>

    <delete id="deleteRemoteSetByIds" parameterType="String">
        delete from remote_set where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>